{
    "compilerOptions": {
        "rootDir": "../src/",
        "outDir": "../dist/",
        "noImplicitAny": false,
        "module": "commonjs",
        "target": "esnext",
        "allowJs": true,
        "moduleResolution": "node",
        "allowSyntheticDefaultImports": true,
        "esModuleInterop": true
    },
    "include": ["../src/**/*.ts"],
    "exclude": [
        "node_modules",
        "**/*.spec.ts",
    ]
}
